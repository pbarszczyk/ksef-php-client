#!/usr/bin/env php
<?php

use N1ebieski\KSEFClient\Support\Utility;

require __DIR__ . '/../vendor/autoload.php';

$dotenv = Dotenv\Dotenv::createImmutable(__DIR__ . '/..');
$dotenv->load();

$argv = $_SERVER['argv'];
$command = $argv[1] ?? null;

if ($command === null) {
    echo "Usage: php bin/console <command> [options]\n";

    exit();
}

require_once Utility::basePath($command);
